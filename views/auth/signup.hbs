<h1 class="navbar main-page-bar">{{title}}</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 col-sm-5 col-xs-5 col-lg-5">
      <h2 class="main-text"> Sign Up </h2>
        {{#if errorMessage}}
          <p class="error-message">
            {{ errorMessage }}
          </p>
        {{/if}}
      <form action="/signup" method="post">
        {{!-- <label class="edit-text" for="name-input"> First Name: </label> --}}
        {{!-- <input type="text" name="firstname" id="name-input" placeholder="e.g., Diana" class="form-control"> --}}
        {{!-- <label class="edit-text" for="name-input"> Last Name: </label> --}}
        {{!-- <input type="text" name="lastname" id="name-input" placeholder="e.g., Prince" class="form-control"> --}}
        <label class="edit-text" for="username-input"> Username: </label>
        <input type="username" name="username" id="username-input" placeholder="username" class="form-control">
        <label class="edit-text" for="password-input"> Password: </label>
        <input type="password" name="password" id="password-input" placeholder="password" class="form-control">
        <div class="edit-text">
          <button class="btn btn-success"> Create New Account </button>
        </div>
      </form>
      <p class="edit-text">Already have an account?<a href="/"> Sign in</a></p>
    </div>
    <div class="col-md-7 col-sm-7 col-xs-7 col-lg-7">
      <img class="main-img" src="/images/Map your memories.jpg" alt="Map your memories.jpg">
    </div>
  </div>
</div>