    <div class="col-md-5 col-sm-5 col-xs-5 col-lg-5">
      <p class="main-text">Welcome to {{title}}</p>
      <h2 style="font-style: italic; font-weight: bold;"> Where You Map Your Memories </h2>
      {{#if isUserLoggedIn }}
        <p> Hello, {{ currentUserInfo.username }} </p>
      {{/if}}
      {{!-- <p class="main-text"> Sign in </p> --}}
      {{#if errorMessage}}
        <p class="error-message">
          {{ errorMessage }}
        </p>
      {{/if}}
      <form action="/" method="post">
        <label class="edit-text" for="username-input"> Username: </label>
        <input type="username" name="username" id="username-input" placeholder="username" class="form-control">
        <label class="edit-text" for="password-input"> Password: </label>
        <input type="password" name="password" id="password-input" placeholder="password" class="form-control">
        <div class="main-text">
          <button class="btn btn-primary"> Sign in </button>
        </div>
      </form>
      {{!-- <div class="edit-text"><a href="/auth/facebook"> Sign in With Facebook </a></div> --}}
